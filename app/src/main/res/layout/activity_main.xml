<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paytm">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/shape"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/send_text_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:autofillHints=""
                android:background="@drawable/edittxtstyle"
                android:hint="Enter Name"
                android:maxLines="1"
                android:padding="12dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/send_text_num"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:autofillHints=""
                android:background="@drawable/edittxtstyle"
                android:hint="Enter Number"
                android:maxLines="1"
                android:padding="12dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/send_text_amount"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:autofillHints=""
                android:background="@drawable/edittxtstyle"
                android:hint="Enter Amount"
                android:maxLines="1"
                android:padding="12dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/send_text_date"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:autofillHints=""
                android:background="@drawable/edittxtstyle"
                android:hint="Enter Date"
                android:maxLines="1"
                android:padding="12dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/send_text_time"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:autofillHints=""
                android:background="@drawable/edittxtstyle"
                android:hint="Enter Time"
                android:maxLines="1"
                android:padding="12dp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/send_button_id"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="#012B72"
                android:text="send"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>